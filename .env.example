# Network selection (mainnet or sepolia)
NETWORK=mainnet

# Client selection (geth or reth)
CLIENT=geth

# Base data directory
HOST_DATA_DIR=./${CLIENT}-data

# Required L1 endpoints
OP_NODE_L1_ETH_RPC=<your-l1-rpc-url>
OP_NODE_L1_BEACON=<your-l1-beacon-url>  # Required for both clients

# For Reth archive nodes only
# This endpoint is needed for historical blob data (Dencun upgrade)
OP_NODE_L1_BEACON_ARCHIVER=<your-l1-blob-archiver-url>

# Sync mode (default: execution-layer)
OP_NODE_SYNCMODE=execution-layer

# Optional: Enable stats
# OP_GETH_ETH_STATS=nodename:secret@host:port

# Optional: Enable snap sync (experimental)
# OP_GETH_SYNCMODE=snap 